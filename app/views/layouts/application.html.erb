<!DOCTYPE html>
<html>
  <head>
    <title>ProjectRailsJsCoffee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <% if !logged_in? %>
        <li><%= link_to "Sign Up", new_user_path %></li>
        <li><%= link_to "Sign In", signup_path %></li>
        <% else %>
        <li><%= link_to "#{current_user.username}'s Profile" %></li>
        <li><%= link_to "Roasters", roasters_path %></li>
        <li><%= link_to "Coffee Beans", beans_path %></li>
        <li><%= link_to "Log Out", logout_path, method: :post %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
